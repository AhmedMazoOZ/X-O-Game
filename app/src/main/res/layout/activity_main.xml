<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:gravity="center" android:background="@android:color/darker_gray">


    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center">
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/b1" android:onClick="buselect"
                android:layout_marginRight="5dp" android:layout_marginBottom="5dp"/>
        <Button
                android:layout_height="40pt" android:id="@+id/b2" android:layout_width="40pt"
                android:onClick="buselect" android:layout_marginBottom="5dp"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/b3" android:onClick="buselect"
                android:layout_marginLeft="5dp" android:layout_marginBottom="5dp"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center">
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/b4" android:onClick="buselect"
                android:layout_marginRight="5dp"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/b5" android:onClick="buselect"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/b6" android:onClick="buselect"
                android:layout_marginLeft="5dp"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center">
        <Button
                android:layout_width="40pt"
                android:id="@+id/b7" android:layout_height="40pt" android:onClick="buselect"
                android:layout_marginRight="5dp" android:layout_marginTop="5dp"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/b8" android:onClick="buselect"
                android:layout_marginTop="5dp"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/b9" android:onClick="buselect"
                android:layout_marginLeft="5dp" android:layout_marginTop="5dp"/>
    </TableRow>
</TableLayout>